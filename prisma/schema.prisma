generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model JodexAdmin {
  id        String   @id @unique @default(uuid())
  email     String   @unique
  company   String   @default("Jodex")
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model User {
  id              String   @id @unique @default(uuid())
  userName        String
  phoneNumber     String?  @unique
  email           String
  password        String
  passwordConfirm String
  picture         String?
  user            String
  company         String   @default("Jodex")
  createdAT       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("users")
}

model Landlord {
  id          String     @id @unique @default(uuid())
  userName    String
  phoneNumber String?    @unique
  email       String
  password    String
  properties  Property[]
  company     String     @default("Jodex")
  createdAT   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model Tenant {
  id         String   @id @unique @default(uuid())
  userName   String
  email      String
  password   String
  createdAT  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  company    String   @default("Jodex")
  Properties Property @relation(fields: [id], references: [id])
}

model Property {
  id          String   @id @unique @default(uuid())
  flat        Int
  unit        Int
  city        String
  state       String
  zipCode     Int
  description String
  rooms       Int
  bath        Int
  kitchen     Int
  diningRoom  Int
  pictures    String
  garage      Boolean
  wifi        Boolean
  houseType   String
  address     String
  createdAT   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  company     String   @default("Jodex")
  Tenants     Tenant[]
  Landlord    Landlord @relation(fields: [landlordId], references: [id])
  landlordId  String
}

enum UserType {
  landlord
  tenant
  Admin
}

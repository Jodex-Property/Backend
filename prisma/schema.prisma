model Property {
  id          String   @id @unique @default(uuid())
  flat        Int
  unit        Int
  city        String
  state       String
  zipCode     Int
  description String
  rooms       Int
  bath        Int
  kitchen     Int
  diningRoom  Int
  pictures    String
  garage      Boolean
  wifi        Boolean
  houseType   String
  address     String
  createdAT   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  company     String   @default("Jodex")
  // Tenants     Tenant[]
  landlordId  String
  landlord    User     @relation(fields: [landlordId], references: [id])
  rentals     Rental[]
}

enum UserType {
  LANDLORD
  TENANT
}
